<h1>Edit <%= @employee.name%></h1>


<%= form_for @employee do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%><br>

    <%= f.label :title%>
    <%= f.text_field :title%><br>

    <%= f.label :company_name %>:
    <%= f.collection_select :company_id, Company.all, :id, :name, prompt: true %><br>

    <%= f.submit %>
<% end %>